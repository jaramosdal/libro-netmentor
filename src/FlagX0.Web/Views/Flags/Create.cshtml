@model FlagViewModel

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger" role="alert">
        @Model.Error
    </div>
}


<form asp-action="create" asp-controller="flags" method="post" class="row row-cols-lg-auto g-3 align-items-center">
    <div class="col-12">
        <label class="visible-hidden" for="flagName">
            Flag Name
        </label>
        <div class="input-group">
            <div class="input-group-text">Flag Name</div>
            <input type="text" asp-for="Name" class="form-control" id="inlineFormInputGroupUsername" placeholder="Flag Name" />
        </div>
    </div>

    <div class="col-12">
        <div class="form-check form-switch">
            <input type="checkbox" asp-for="IsEnabled" class="form-check-input" role="switch" />
        </div>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Create flag</button>
    </div>
</form>